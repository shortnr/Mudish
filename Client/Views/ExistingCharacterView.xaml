<Page x:Class="Client.Views.ExistingCharacterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views"
        mc:Ignorable="d"
        Height="180" Width="300"
        Background="AntiqueWhite">
    
    <Grid Margin="0 20 0 20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="NameTextBox" Text ="{Binding CharacterName, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource WatermarkTextBox}" Tag="Character Name"
                 TextAlignment="Center" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"
                 Grid.Row="0" Width="200" Height="36" MaxLines="1"/>

        <TextBox x:Name="PasswordTextBox" Text ="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource WatermarkTextBox}" Tag="Enter Password"
                 TextAlignment="Center" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" 
                 Grid.Row="1" Width="200" Height="36" MaxLines="1"/>
        
        <Button x:Name="LoginButton" Grid.Row="3" Width="90" Height="36" Content="Login" FontSize="24"
                IsDefault="True" Command="{Binding LoginCommand}"/>
    </Grid>
</Page>
