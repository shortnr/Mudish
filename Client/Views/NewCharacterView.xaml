<Page x:Class="Client.Views.NewCharacterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.Views"
        Background="AntiqueWhite"
        mc:Ignorable="d" Height="240" Width="300">
    <Grid Margin="0 20 0 20">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBox x:Name="NameTextBox" Text ="{Binding CharacterName, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center" FontSize="24" Width="200" Height="36" MaxLines="1"
                 Style="{StaticResource WatermarkTextBox}" Tag="Character Name" Grid.Row="0" Grid.Column="1"
                 d:Text="Character Name" d:Foreground="Gray"/>

        <Label HorizontalAlignment="Left" VerticalAlignment="Center" 
               Content="*" FontSize="18" Grid.Row="0" Grid.Column="2"/>

        <TextBox x:Name="PasswordTextBox" Text ="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center" FontSize="24" Width="200" Height="36" MaxLines="1"
                 Style="{StaticResource WatermarkTextBox}" Tag="Enter Password" Grid.Row="1" Grid.Column="1"
                 d:Text="Enter Password" d:Foreground="Gray"/>

        <Label HorizontalAlignment="Left" VerticalAlignment="Center" 
                Content="*" FontSize="18" Grid.Row="1" Grid.Column="2"/>

        <TextBox x:Name="SecondPasswordTextBox" Text ="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
                 TextAlignment="Center" FontSize="24" Width="200" Height="36" MaxLines="1"
                 Style="{StaticResource WatermarkTextBox}" Tag="Enter Password" Grid.Row="2" Grid.Column="1"
                 d:Text="Reenter Password" d:Foreground="Gray"/> 

        <Label HorizontalAlignment="Left" VerticalAlignment="Center" 
                Content="*" FontSize="18" Grid.Row="2" Grid.Column="2"/>

        <Button x:Name="CreateButton" Width="90" Height="36"
                Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"
                Content="Create" FontSize="18" IsDefault="True" 
                Command="{Binding LoginCommand}"/>

        <Button x:Name="ClearFormButton" Width="90" Height="36"
                Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right"
                Content="Clear" FontSize="18" Command="{Binding ClearCommand}"/>
    </Grid>
</Page>
